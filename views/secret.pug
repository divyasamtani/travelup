                  a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapseSix', aria-expanded='false', aria-controls='collapseSix')
                    | Oceania
              #collapseSix.panel-collapse.collapse(role='tabpanel', aria-labelledby='oceania')
                fieldset.form-group.checkbox
                  input#australia(type='checkbox', value='australia')
                  label(for='australia') Australia
            .panel.panel-default
              #antartica.panel-heading(role='tab')
