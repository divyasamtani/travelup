extends base/layout

block main
  #mainbody.container
    .row
      #mapdiv.col-xs-6
        .col-xs-12
          h1#mapheader My Map
          #map
          p#loc=json
        .col-xs-12
          #travelstats
          table.table
            thead.thead-inverse
              tr
                td#tableheader Travel Stats
            tbody
              tr
                td World Coverage
                td#worldCoverage
              tr
                td Travel Percentage
                td#travelPercentage
              tr
                td Travel Level
                td#travelLevel
      .col-xs-6
        button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
          | Create New List
        // Modal
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            //- Content
            .modal-content
              //-  Header
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
                h4#myModalLabel.modal-title LOCATION
              //- Body
              .modal-body
                 form(role='form')
                  .card-block
                    //- Header
                    .text-xs-center
                      h3
                        i.fa.fa-envelope
                        |  My List
                      hr.m-t-2.m-b-2
                      //- // Body
                      .md-form
                        i.fa.fa-user.prefix
                        input#location.form-control(type='text')
                        label(for='location') Location
                      .md-form
                        i.fa.fa-envelope.prefix
                        input#accomodation.form-control(type='text')
                        label(for='accomodation')  Accomodation
                      .md-form
                        i.fa.fa-tag.prefix
                        input.form-control.foodandbev(type='text')
                        input.form-control.foodandbev(type='text')
                        input.form-control.foodandbev(type='text')
                        input.form-control.foodandbev(type='text')
                        input.form-control.foodandbev(type='text')
                        label(for='foodandbev')  Eats and Drinks
                      .md-form
                        i.fa.fa-tag.prefix
                        input.form-control.activites(type='text')
                        input.form-control.activites(type='text')
                        input.form-control.activites(type='text')
                        input.form-control.activites(type='text')
                        input.form-control.activites(type='text')
                        label(for='activities')  Fun things to do
                    //- // Submit Button
                    .text-xs-center
                      button.btn.btn-default Submit
              // Footer
              .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='button') Save changes



block script
  script(type='text/javascript', src='js/locations.js')
