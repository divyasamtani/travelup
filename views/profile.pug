extends base/layout

block main
  #mainbody.container
    .row
      #mapdiv.col-xs-6
        .col-xs-12
          h1#mapheader My Map
          #map
          p#loc=json
        .col-xs-12
          #travelstats
          table.table
            thead.thead-inverse
              tr
                td#tableheader Travel Stats
            tbody
              tr
                td World Coverage
                td#worldCoverage
              tr
                td Travel Percentage
                td#travelPercentage
              tr
                td Travel Level
                td#travelLevel
      .col-xs-6
        p My Lists
        button.btn.btn-primary.btn-(type='button', data-toggle='modal', data-target='#myModal')
          | Create new List
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
                h4#myModalLabel.modal-title New List
              .modal-body
                .card-block
                  //- // Header
                  .text-xs-center
                    h3
                      i.fa.fa-envelope
                      |  My List
                    hr.m-t-2.m-b-2
                    //- // Title
                    p  What's on your list?
                    br
                    //- // Body
                    .md-form
                      i.fa.fa-user.prefix
                      input#location.form-control(type='text')
                      label(for='location') Location
                    .md-form
                      i.fa.fa-envelope.prefix
                      input#accomodation.form-control(type='text')
                      label(for='accomodation')  Accomodation
                    .md-form
                      i.fa.fa-tag.prefix
                      input.form-control.foodandbev(type='text')
                      input.form-control.foodandbev(type='text')
                      input.form-control.foodandbev(type='text')
                      input.form-control.foodandbev(type='text')
                      input.form-control.foodandbev(type='text')
                      label(for='foodandbev')  Eats and Drinks
                    .md-form
                      i.fa.fa-tag.prefix
                      input.form-control.activites(type='text')
                      input.form-control.activites(type='text')
                      input.form-control.activites(type='text')
                      input.form-control.activites(type='text')
                      input.form-control.activites(type='text')
                      label(for='activities')  Fun things to do
                    .md-form
                      i.fa.fa-pencil.prefix
                      textarea#comments.md-textarea(type='text')
                      label(for='comments')  Thoughts
                  //- // Submit Button
                  .text-xs-center
                    button.btn.btn-default Submit
              .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Create My List

  script(type='text/javascript', src='js/locations.js')


